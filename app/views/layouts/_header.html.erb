<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("Malaysia-Prihatin-01-550x550.png", alt: "navbar-brand", width: "80px"), root_url%>
    <span class="navbar-title"><%= link_to  "COURSE REGISTRATION SYSTEM" , root_url %></span>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "Add Course", addcourses_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", allusers_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle":"dropdown" do %>
              Account <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class = "divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
