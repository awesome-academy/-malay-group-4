<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "custom", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>
 
  <body>
    
    <nav class="navbar navbar-default">

    <%= render "layouts/header" %>
    <div class = "container">
      <div class="navbar-header">
        <%= link_to "Course Review", root_path, class: "navbar-brand" %>

        <ul class="nav navbar-nav">
          <li><%= link_to "Sign Up", signup_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Sign Out", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Add Course", addcourses_path %></li> 
          <% end %>

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </body>
</html>
