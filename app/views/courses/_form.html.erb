<%= creditsform_for @course do |f| %>
	  	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
	<%= f.file_field :course_img %>
	<%= f.input :title, label: "Course Name" %>
	<%= f.input :description %>
	<%= f.input :credits %>
	<%= f.button :submit %>
<% end %>
